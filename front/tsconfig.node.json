{
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.node.tsbuildinfo",
    "target": "ES2023",
    "lib": ["ES2023"],
    "module": "ESNext",
    "skipLibCheck": true,
    "composite": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": false,     // Change to false for better compatibility
    "moduleDetection": "auto",         // Change from "force" to "auto"
    "strict": true,
    "noUnusedLocals": false,           // Relax during development
    "noUnusedParameters": false,       // Relax during development
    "noFallthroughCasesInSwitch": true,
    "allowSyntheticDefaultImports": true,
    "noEmit": true
  },
  "include": [
    "vite.config.ts",
    "tailwind.config.ts",
    "postcss.config.js"
  ]
}
